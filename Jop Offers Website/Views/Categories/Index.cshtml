@model IEnumerable<Jop_Offers_Website.Models.Category>

@{
    ViewBag.Title = "قائمة انواع الوظائف";
    ViewBag.SubBannerTitle = "قائمة انواع الوظائف";
    ViewBag.SubBannerUrl = "Jobs Categories";
    Layout = "~/Views/Shared/_SubLayout-1.cshtml";
}

<div class="update-profile-form container" style="width: 100%;">
    <div class="row" style="direction: rtl;">
        <div class="dashboard-list col">
            <h3 class="heading">قائمة انواع الوظائف</h3>
            <div class="dashboard-message contact-1">
                <p>
                    @Html.ActionLink("انشاء نوع جديد", "Create")
                </p>
                <table class="table">
                    <tr class="table-dark" style="color: #007bff;">
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CatehoryDescription)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CatehoryDescription)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Categories", new { id = item.Id })" class="btn btn-success"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Details", "Categories", new { id = item.Id })" class="btn btn-info"><i class="fa fa-info-circle"></i></a>
                                <a href="@Url.Action("Delete", "Categories", new { id = item.Id })" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                @*
                                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                                *@
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>