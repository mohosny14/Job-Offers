@model Jop_Offers_Website.Models.Category

@{
    ViewBag.Title = "تعديل";
    ViewBag.SubBannerTitle = "تعديل نوع الوظائف";
    ViewBag.SubBannerUrl = "Edit Category Details";
    Layout = "~/Views/Shared/_SubLayout-1.cshtml";
}

<div class="update-profile-form container" style="width: 45.3333%;">
    <div class="row" style="direction: rtl;">
        <div class="dashboard-list col">
            <h3 class="heading">تعديل نوع الوظائف</h3>
            <div class="dashboard-message contact-1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group form-inline">
                            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group form-inline">
                            @Html.LabelFor(model => model.CatehoryDescription, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.CatehoryDescription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CatehoryDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-12 form-footer">
                            <div class="send-btn">
                                <button id="save" type="submit" class="btn btn-md button-theme">حفظ</button>
                            </div>
                            <div class="back-to-home">
                                <a href="~/Categories/Index">العوده الى القائمه مره أخرى</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>