@model Jop_Offers_Website.Models.ApplyForJob

@{
    ViewBag.Title = "Delete";
    ViewBag.SubBannerTitle = "حذف الوظيفة";
    ViewBag.SubBannerUrl = "Delete Job";
    Layout = "~/Views/Shared/_SubLayout-1.cshtml";
}

<div class="update-profile-form container" style="widivh: 100%;">
    <div class="row" style="direction: rtl;">
        <div class="dashboard-list col">
            <h3 class="heading">حذف الوظيفة التى تقدمت اليها</h3>
            <div class="dashboard-message contact-1">
                <div class="col-lg-12">
                    <div class="form-group form-inline">
                        <div class="col-md-4">
                            عنوان الوظيفة
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.objJob.JobName)
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-4">
                            نص الرسالة
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.Message)
                        </div>
                    </div>
                    <div class="form-group form-inline">
                        <div class="col-md-4">
                            تاريخ الارسال
                        </div>
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.ApplyDate)
                        </div>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="col-lg-12 form-footer">
                        <div class="send-btn">
                            <input type="submit" value="تأكيد الحذف" class="btn btn-danger" />
                        </div>
                        <div class="back-to-home">
                            @Html.ActionLink("العودة الى القائمة", "Index")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
</div>
