
@{
    ViewBag.Title = "Apply";
    ViewBag.SubBannerTitle = "التقدم ال هذه الوظيفة";
    ViewBag.SubBannerUrl = "Apply To This Job";
    Layout = "~/Views/Shared/_SubLayout-1.cshtml";
}

<div class="update-profile-form container" style="width: 100%;">
    <div class="row">
        <div class="dashboard-list col">
            <h3 class="heading">تفاصيل الوظيفة</h3>
            <div class="dashboard-message contact-1">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h2>التقدم الى الوظيفة</h2>
                    <div class="form-horizontal">
                        <h4>رسالة (اختيارى)</h4>
                        <div style="text-align: center;">
                            @{
                                if (ViewBag.result != null)
                                {
                                    if (@ViewBag.result == "خطأ! لقد تقدمت لنفس الوظيفة من قبل")
                                    {
                                        <h3 style="color: red;font-size: 20px;">@ViewBag.result</h3>
                                    }
                                    else
                                    {
                                        <h3 style="color: green;font-size: 20px;">@ViewBag.result</h3>
                                    }
                                }
                            }
                        </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="تأكيد" class="btn btn-default button-theme" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("العودة الى الرئيسيه", "Index")
                </div>
            </div>
        </div>
    </div>
</div>
