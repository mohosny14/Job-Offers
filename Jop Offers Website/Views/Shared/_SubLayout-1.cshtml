<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    @System.Web.Optimization.Styles.Render("~/Content/font-awesome")
    <link href="~/Content/Flaticon/flaticon.css" rel="stylesheet" />
</head>
<body>
    <!-- #region Main header start -->
    <header class="main-header header-transparent sticky-header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">
                <a class="navbar-brand logo" href="~/Home">Wazifa@*<img src="~/Images/logo.png" alt="logo">*@</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @Html.Partial("_Login")
                </div>
            </nav>
        </div>
    </header>
    <!-- #endregion Main header end -->
    <!-- #region Banner start -->
    <div class="sub-banner">
        <div class="container">
            <div class="breadcrumb-area">
                <h1>@ViewBag.SubBannerTitle</h1>
                <ul class="breadcrumbs">
                    <li><a href="~/Home">Home</a></li>
                    <li class="active">@ViewBag.SubBannerUrl</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- #endregion Banner end -->
    <div>
        @RenderBody()
    </div>
    <!-- #region Footer start -->
    <footer class="myfooter footer">
        <div class="container footer-inner">
            <div class="row">
                <!-- المكون هنا من 3 عناصرfooter محتوى ال-->
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                    <div class="footer-item">
                        <h4>
                            <i class="glyphicon glyphicon-paperclip"></i>
                            روابط مهمه
                        </h4>
                        <div class="s-border"></div>
                        <div class="m-border"></div>
                        <ul class="links">
                            <li><a href="#">وظائف للقطاع الخاص</a></li>
                            <li><a href="#">وظائف للقطاع العام</a></li>
                            <li><a href="#">وظائف خارج البلاد</a></li>
                            <li><a href="#">وظائف متنوعه</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                    <div class="footer-item">
                        <h4>
                            <i class="glyphicon glyphicon-envelope"></i>
                            تواصل معنا
                        </h4>
                        <div class="s-border"></div>
                        <div class="m-border"></div>
                        <ul class="links">
                            <li><a href="#">صفحتنا على الفيس بوك</a></li>
                            <li><a href="#">صحفتنا على تويتر</a></li>
                            <li><a href="#">تابعنا على لينكدان</a></li>
                            <li><a href="~/home/contact">تواصل معنا</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4">
                    <div class="footer-item">
                        <h4>
                            <i class="glyphicon glyphicon-question-sign"></i>
                            من نحن ؟
                        </h4>
                        <div class="s-border"></div>
                        <div class="m-border"></div>
                        <ul class="links">
                            <li><a href="~/Home/About">عن الموقع</a></li>
                            <li><p>شركة softChallengers لتطوير البرامج جميع المجالات</p></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <div class="sub-footer">
            <div class="container">
                <div class="row">
                    <div class="col-xl-9 col-lg-9 col-md-12">
                        <p class="copy">© 2020 <a href="#">Wazifa.</a> All Rights Reserved For SoftChallengers</p>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-12">
                        <ul class="social-list clearfix">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            <li><a href="#"><i class="fa fa-rss"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- #endregion Footer end -->

    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop()) {
                $('#page_scroller').fadeIn();
            } else {
                $('#page_scroller').fadeOut();
            }
        });

    </script>
    @RenderSection("scripts", required: false)

    <a id="page_scroller" href="#" style="position: fixed; z-index: 2147483647;"><i class="fa fa-chevron-up"></i></a>
    <script src="~/Scripts/A js.js"></script>
</body>
</html>
