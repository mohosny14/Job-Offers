@model Jop_Offers_Website.Models.Job

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.SubBannerTitle = "نشر وظيفة جديدة";
    ViewBag.SubBannerUrl = "Create New Job";
    Layout = "~/Views/Shared/_SubLayout-1.cshtml";
}


<script src="~/Scripts/ckeditor/ckeditor.js"></script>

<div class="update-profile-form container" style="width: 900px;">
    <div class="row" style="direction: rtl;">
        <div class="dashboard-list col">
            <h3 class="heading">إنشاء وظيفة جديده</h3>
            <div class="dashboard-message contact-1">
                @using (Html.BeginForm("Create", "jobs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="alert alert-danger" id="error-div" style="display:none">
                        <span id="view-err">

                        </span>

                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group form-inline">
                                <div class="col-md-2">@Html.LabelFor(model => model.JobName, htmlAttributes: new { @class = "" })</div>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.JobName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.JobName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group form-inline">
                                <div class="col-md-2">@Html.LabelFor(model => model.JobContent, htmlAttributes: new { @class = "" })</div>
                                <div class="col-md-10">
                                    @Html.TextAreaFor(model => model.JobContent, new { htmlAttributes = new { @class = "form-control", @id = "JobContent" } })
                                    @Html.ValidationMessageFor(model => model.JobContent, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group form-inline">
                                <div class="col-md-2">@Html.LabelFor(model => model.jobImage, htmlAttributes: new { @class = "" })</div>
                                <div class="col-md-10">
                                    <label id="custom-file-upload">
                                        Upload   <i class="fa fa-upload"></i>
                                        <input type="file" name="upload" id="jobImage" />
                                    </label>
                                    @Html.ValidationMessageFor(model => model.jobImage, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group form-inline">
                                <div class="col-md-2">@Html.LabelFor(model => model.CategoryID, "نوع الوظيفة", htmlAttributes: new { @class = "" })</div>
                                <div class="col-md-10">
                                    @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-12 form-footer">
                            <div class="send-btn">
                                <button id="save" type="submit" class="btn btn-md button-theme">إنشاء</button>
                            </div>
                            <div class="back-to-home">
                                <a href="~/Home">العودة الى الصفحة الرئيسية</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





<script>
    CKEDITOR.replace("JobContent");
</script>


