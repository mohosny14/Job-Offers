@model Jop_Offers_Website.Models.Job

@{
    ViewBag.Title = "Delete";
    ViewBag.SubBannerTitle = "حذف الوظيفة";
    ViewBag.SubBannerUrl = "Delete Job";
    Layout = "~/Views/Shared/_SubLayout-1.cshtml";
}

<div class="update-profile-form container" style="width: 45.3333%;">
    <div class="row" style="direction: rtl;">
        <div class="dashboard-list col">
            <h3 class="heading">هل أنت متأكد من حذف هذه الوظيفة ؟</h3>
            <div class="dashboard-message contact-1">
                <div>
                    <h5>تفاصيل الوظيفة</h5>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group form-inline">
                            <div class="col-md-3">
                                @Html.DisplayNameFor(model => model.category.CategoryName)
                            </div>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.category.CategoryName)
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="col-md-3">
                                @Html.DisplayNameFor(model => model.JobName)
                            </div>
                            <div class="col-md-9">
                                @Html.DisplayFor(model => model.JobName)
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="col-md-3">
                                @Html.DisplayNameFor(model => model.JobContent)
                            </div>
                            <div class="col-md-9">
                                @Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(model => model.JobContent).ToString()))
                            </div>
                        </div>
                        <div class="form-group form-inline">
                            <div class="col-md-3">
                                @Html.DisplayNameFor(model => model.jobImage)
                            </div>
                            <div class="col-md-9">
                                <img src="~/Uploads/@Html.DisplayFor(model => model.jobImage)"
                                     class="thumbnail"
                                     style="width:100%; max-height:370px;" />
                            </div>
                        </div>

                    </div>
                </div>

                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color" style="text-align:center; margin-top:30px;">
                            <input type="submit" value="تأكيد الحذف" class="btn btn-danger" />
                            <div style="margin-top: 10px;">@Html.ActionLink("العودة الى الوظائف", "Index")</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
